<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#164176"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="248dp"
        android:layout_height="234dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        app:srcCompat="@mipmap/iconforgot_foreground" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="กรุณาระบุอีเมล์ที่ได้ทำการลง"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:fontFamily="@font/mitr_extralight" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ทะเบียนเพื่อทำการรีเซ็ตรหัสผ่าน"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:fontFamily="@font/mitr_extralight" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_round"
        android:hint="  E-mail"
        android:inputType="textEmailAddress"
        app:fontFamily="@font/mitr_extralight" />

    <Button
        android:id="@+id/bForgot"
        android:layout_width="308dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttom0"
        android:text="ยืนยัน"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:fontFamily="@font/prompt_semibold" />

</LinearLayout>