<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#164176"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="#164176"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pin"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center|clip_vertical|top|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/buttom0"
        android:text="ปักหมุดการเดินทาง"
        android:textColor="#ffffff"
        android:textSize="29dp"
        app:fontFamily="@font/prompt_medium" />


    <Button
        android:id="@+id/customize_distance"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center|clip_vertical|top|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/buttom0"
        android:text="กำหนดระยะทางด้วยตนเอง"
        android:textColor="#ffffff"
        android:textSize="29dp"
        app:fontFamily="@font/prompt_medium" />


</LinearLayout>