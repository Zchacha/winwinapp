<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customizedistance"
    android:orientation="vertical"
    android:background="#164176">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_marginVertical="65dp"
            android:layout_marginStart="30dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_sqaure"/>

        <TextView
            android:layout_width="10dp"
            android:layout_marginVertical="75dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="50sp"
            android:textColor="@color/colorwhite"/>

        <EditText
            android:layout_marginVertical="65dp"
            android:layout_marginStart="20dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_sqaure"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginVertical="75dp"
            android:layout_marginStart="10dp"
            android:text="km"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorwhite"
            />



    </LinearLayout>
   <Button
       android:layout_width="300dp"
       android:layout_height="60dp"
       android:layout_gravity="center"
       android:background="@drawable/buttom0"
       android:text="คำนวณ"
       android:textColor="@color/colorwhite"
       android:textStyle="bold"
       android:textSize="30dp"
       app:fontFamily="@font/prompt_semibold" />


</LinearLayout>